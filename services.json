{
  "services": {
    "auth": {
      "baseUrl": "http://127.0.0.1:3001",
      "routes": [
        {
          "path": "/auth/login",
          "methods": ["POST"],
          "requiresAuth": false
        },
        {
          "path": "/auth/register",
          "methods": ["POST"],
          "requiresAuth": false
        },
        {
          "path": "/auth/verify",
          "methods": ["GET"],
          "requiresAuth": true,
          "cache": true
        },
        {
          "path": "/auth/profile",
          "methods": ["GET"],
          "requiresAuth": true,
          "cache": true
        }
      ]
    },
    "users": {
      "baseUrl": "http://127.0.0.1:3002",
      "routes": [
        {
          "path": "/users",
          "methods": ["GET", "POST"],
          "requiresAuth": true,
          "cache": true
        },
        {
          "path": "/users/:id",
          "methods": ["GET", "PUT", "DELETE"],
          "requiresAuth": true,
          "cache": true
        }
      ]
    },
    "products": {
      "baseUrl": "http://127.0.0.1:3003",
      "routes": [
        {
          "path": "/products",
          "methods": ["GET", "POST"],
          "requiresAuth": false,
          "rateLimit": true,
          "cache": true
        },
        {
          "path": "/products/:id",
          "methods": ["GET", "PUT", "DELETE"],
          "requiresAuth": true,
          "rateLimit": true,
          "cache": true
        },
        {
          "path": "/products/category/:category",
          "methods": ["GET"],
          "requiresAuth": false,
          "rateLimit": true,
          "cache": true
        }
      ]
    },
    "payments": {
      "baseUrl": "http://127.0.0.1:3004",
      "routes": [
        {
          "path": "/payments/create",
          "methods": ["POST"],
          "requiresAuth": true,
          "rateLimit": true
        },
        {
          "path": "/payments/:id",
          "methods": ["GET"],
          "requiresAuth": true,
          "cache": true
        }
      ]
    }
  },
  "global": {
    "defaultRateLimit": true,
    "timeout": 5000,
    "maxPayloadSize": "1mb"
  }
}